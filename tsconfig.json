{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "target": "es2020",
      "module": "commonjs",
      "esModuleInterop": true,                             
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                      
      "skipLibCheck": true,
      "experimentalDecorators" : true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*.ts"],
}
